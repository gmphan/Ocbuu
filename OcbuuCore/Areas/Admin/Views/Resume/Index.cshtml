@model ResumeVM 
@{
    var resumeHeader = Model.ResumeHeader;
    var resumeExperiences = Model.ResumeExperiences;
    var resumeSummary = Model.ResumeSummary;
}
<div class="card text-white bg-primary mb-3 text-center"> 
  <div class="card-header">
    @*list-group-item list-group-item-action  *@
    <div class="flex-column align-items-start"> 
      <div class="d-flex w-100 justify-content-between">
        <h5 class="mb-1">Resume Header</h5>
        <small>
            <a  asp-area="Admin" asp-controller="ResumeHeader" asp-action="Edit" asp-route-id="@resumeHeader.Id" class="btn btn-primary mx-2">
              <i class="bi bi-pencil-square"></i>
            </a>
            <a asp-area="Admin" asp-controller="ResumeHeader"  asp-action="Create" class="btn btn-primary mx-2"> 
              <i class="bi bi-plus-square"></i>
            </a>
            <a asp-area="Admin" asp-controller="ResumeHeader" asp-action="Delete" asp-route-id="@resumeHeader.Id" class="btn btn-danger mx-2"> 
              <i class="bi bi-trash3"></i>
            </a>
        </small>
      </div>
    </div>
  </div>
  <div class="card-body"
    <h1 class="card-title">@resumeHeader.FirstName @resumeHeader.LastName</h1>
    <h4>@resumeHeader.Headline </h4>
    @* <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> *@
    <p class="card-text">
        @resumeHeader.City, @resumeHeader.Zipcode, @resumeHeader.Country <br/>
        @resumeHeader.PhoneNum <br/>
        @resumeHeader.Email <br/>
        <a href="@resumeHeader.LinkedIn" class="card-link">LinkedIn</a> <br/>
        <a href="@resumeHeader.GitHub" class="card-link">GitHub</a> <br/>
    </p>
    
  </div>
</div>

@* Resume Summary Section *@
<div>
   <h4>Summary:</h4>
   <div class="card text-white bg-primary mb-3"> 
    <div class="card-header">
      <div class="flex-column align-items-start"> 
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">Resume Summary</h5>
          <small>
              <a  asp-area="Admin" asp-controller="ResumeSummary" asp-action="Edit" asp-route-id="@resumeSummary.Id" class="btn btn-primary mx-2">
                <i class="bi bi-pencil-square"></i>
              </a>
              <a asp-area="Admin" asp-controller="ResumeSummary"  asp-action="Create" class="btn btn-primary mx-2"> 
                <i class="bi bi-plus-square"></i>
              </a>
              <a asp-area="Admin" asp-controller="ResumeSummary" asp-action="Delete" asp-route-id="@resumeSummary.Id" class="btn btn-danger mx-2"> 
                <i class="bi bi-trash3"></i>
              </a>
          </small>
        </div>
      </div>
    </div>
    <div class="card-body"
      @* <h1 class="card-title">@resumeHeader.FirstName @resumeHeader.LastName</h1> *@
      @* <h4>@resumeHeader.Headline </h4> *@
      @* <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> *@
      <p class="card-text">
        @resumeSummary.Summary
      </p>
      
    </div>
  </div>
</div>


<div>
  <h4>Expeirences:</h4>
  @foreach (var item in resumeExperiences)
  {
      
    <div class="card text-white bg-primary mb-3"> 
      <div class="card-header">
        @*list-group-item list-group-item-action  *@
        <div class="flex-column align-items-start"> 
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">@item.JobTitle</h5>
            <small>
                <a  asp-area="Admin" asp-controller="ResumeExperience" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <a asp-area="Admin" asp-controller="ResumeExperience"  asp-action="Create" class="btn btn-primary mx-2"> 
                  <i class="bi bi-plus-square"></i>
                </a>
                <a asp-area="Admin" asp-controller="ResumeExperience" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> 
                  <i class="bi bi-trash3"></i>
                </a>
            </small>
          </div>
        </div>
      </div>
      <div class="card-body">
        @* <div class="flex-column align-items-start"> *@
          @* <div class="d-flex w-100 justify-content-between"> *@
            <h5 class="card-title"></h5>
            
            <h6><i>@item.StartMonth @item.StartYear - @item.EndMonth @item.EndYear</i></h6> 
            
          @* </div> *@
        @* </div> *@
        
        
        <h6><i>@item.Company, @item.City, @item.State, @item.Country</i></h6> 
        @* <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> *@
        <p class="card-text">
          @Html.Raw(item.Description)
        </p>
        
      </div>
    </div>
      
  }

</div>





